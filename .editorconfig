root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 8

[*.go.hbs]
indent_style = tab
indent_size = 8

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab
indent_size = 4
